@inherits R_Page


<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label Class="ms-6">Journal Group</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="1" Class="me-3">
        <R_TextBox @bind-Value="@JournalGOAViewModel.CurrentJournalGroup.CJRNGRP_CODE" Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@JournalGOAViewModel.CurrentJournalGroup.CJRNGRP_NAME" Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Class="mt-1">
    <R_Grid @ref="@_gridRef"
            DataSource="JournalGOAViewModel.GOAList"
            R_ConductorGridSource="@_conJournalGOARef"
            R_GridType="@R_eGridType.Original"
            R_ServiceGetListRecord="@R_ServiceGetListRecord"
            Pageable="true"
            AllowDeleteRow="true"
            AllowAddNewRow="false"
            AllowEditRow="true"
            Height="200px"
            R_Before_Open_Grid_Lookup="BeforeOpenLookUPGOA"
            R_After_Open_Grid_Lookup="AfterOpenLookGOA">
        <R_GridColumns>
            <R_GridTextColumn Width="150px" FieldName="GROUPOFACCOUNT" HeaderText="Group of Account" />
            <R_GridCheckBoxColumn Width="100px" FieldName="LDEPARTMENT_MODE" HeaderText="By Dept" R_EnableEdit />
            <R_GridLookupColumn Width="200px" FieldName="CGLACCOUNT_NO" Name="GLAccount_No" HeaderText="GL Account No" R_EnableAdd R_EnableEdit />
            <R_GridTextColumn Width="350px" FieldName="CGLACCOUNT_NAME" HeaderText="GL Account Name" />
            <R_GridTextColumn Width="150px" FieldName="CUPDATE_BY" HeaderText="Updated By" />
            <R_GridDateTimePickerColumn Width="150px" FieldName="DUPDATE_DATE" HeaderText="Updated Date" />
            <R_GridTextColumn Width="150px" FieldName="CCREATE_BY" HeaderText="Created By" />
            <R_GridDateTimePickerColumn Width="150px" FieldName="DCREATE_DATE" HeaderText="Created Date" />
        </R_GridColumns>

    </R_Grid>
</R_StackLayout>

<R_StackLayout Row Class="mt-1">
    <R_ItemLayout col="2">
        <R_Label Class="ms-6">Group of Account</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_TextBox @bind-Value="@GOADeptViewModel.GroupOfAccount"
                   R_ConductorGridSource="@_conGOADeptRef" Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Class="mt-1">
    <R_Grid @ref="@_gridGOADeptRef"
            DataSource="GOADeptViewModel.GOADeptList"
            R_ConductorGridSource="@_conGOADeptRef"
            R_GridType="@R_eGridType.Original"
            R_ServiceGetListRecord="@GridGOADept_GetList"
            Pageable="true"
            AllowDeleteRow="@JournalGOAViewModel.checking_ByDept"
            AllowAddNewRow="@JournalGOAViewModel.checking_ByDept"
            AllowEditRow="@JournalGOAViewModel.checking_ByDept"
            Height="190px"
            R_Before_Open_Grid_Lookup="BeforeOpenLookUpDeptCode"
            R_After_Open_Grid_Lookup="AfterOpenLookUpDeptCode">

        <R_GridColumns>
            <R_GroupBox Enabled="@JournalGOAViewModel.Data.LDEPARTMENT_MODE">
                <R_StackLayout>
                    <R_GridLookupColumn Width="150px" FieldName="@nameof(GSM04510GOADeptDTO.CDEPT_CODE)" Name="CDEPT_CODE" HeaderText="Department Code" R_EnableAdd />
                    <R_GridTextColumn Width="200px" FieldName="CDEPT_NAME" HeaderText="Department Name" />
                    <R_GridLookupColumn Width="200px" FieldName="CGLACCOUNT_NO" Name="GLAccount_No" HeaderText="GL Account No" R_EnableAdd R_EnableEdit />
                    <R_GridTextColumn Width="350px" FieldName="CGLACCOUNT_NAME" HeaderText="GL Account Name" />
                    <R_GridTextColumn  Width="150px" FieldName="CUPDATE_BY" HeaderText="Updated By" />
                    <R_GridDatePickerColumn  Width="150px" FieldName="DUPDATE_DATE" HeaderText="Updated Date" />
                    <R_GridTextColumn  Width="150px" FieldName="CCREATE_BY" HeaderText="Created By" />
                    <R_GridDatePickerColumn  Width="150px" FieldName="DCREATE_DATE" HeaderText="Created Date" />
                </R_StackLayout>
            </R_GroupBox>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_ConductorGrid @ref="@_conJournalGOARef"
                 R_ViewModel="@JournalGOAViewModel"
                      R_IsHeader
                 R_Display="@Grid_Display"
                 R_ServiceGetRecord="@R_ServiceGetRecordAsync"
                 R_ServiceSave="@ServiceSaveGOA" />

<R_ConductorGrid @ref="@_conGOADeptRef"
                 R_ViewModel="@GOADeptViewModel"
                 R_ConductorParent="_conJournalGOARef"
                 R_ServiceGetRecord="R_ServiceGetRecordGOADeptAsync"
                 R_ServiceSave="@ServiceSaveGOADept"
                 R_AfterAdd="@ServiceAfterAdd" />