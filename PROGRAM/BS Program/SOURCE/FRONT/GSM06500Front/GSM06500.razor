@page "/GSM06500"
@inherits R_Page



<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_Label Class="fw-bold">Property</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_ComboBox Data="@PaymentTermViewModel.PropertyList"
                            Value="PaymentTermViewModel.PropertyValueContext"
                            ValueField="@nameof(GSM06500PropertyDTO.CPROPERTY_ID)"
                            TextField="@nameof(GSM06500PropertyDTO.CPROPERTY_NAME)"
                            R_ConductorSource="@_conductorRef"
                            ValueChanged="@((string value) => PropertyDropdown_OnChange(value))">
            </R_ComboBox>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>



<R_StackLayout Class="mt-3">
    <R_Grid @ref="@_gridRef"
            DataSource="PaymentTermViewModel.PaymentOfTermList"
            Pageable="true"
            R_ConductorGridSource="@_conGridPaymentRef"
            R_GridType="@R_eGridType.Original"
            R_ServiceGetListRecord="@R_ServiceGetListRecord"
            AllowDeleteRow="true"
            AllowAddNewRow="true"
            AllowEditRow="true"
            Height="525px"
            >

        <R_GridColumns>
            <R_GridTextColumn Width="200px" MaxLength="8" FieldName="CPAY_TERM_CODE" HeaderText="Term of Payment Code" R_EnableAdd />
            <R_GridTextColumn Width="350px"  MaxLength="100" FieldName="CPAY_TERM_NAME" HeaderText="Term of Payment Name" R_EnableAdd R_EnableEdit />
            <R_GridNumericColumn Width="150px" Min="0" Max="999999" FieldName="IPAY_TERM_DAYS" HeaderText="TOP Days" R_EnableAdd R_EnableEdit Arrows="false" />
            <R_GridTextColumn Width="150px"FieldName="CUPDATE_BY" HeaderText="Updated By" />
            <R_GridDateTimePickerColumn Width="250px"FieldName="DUPDATE_DATE" HeaderText="Updated Date" />
            <R_GridTextColumn Width="150px" FieldName="CCREATE_BY" HeaderText="Created By" />
            <R_GridDateTimePickerColumn Width="250px"  FieldName="DCREATE_DATE" HeaderText="Created Date" />
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_ConductorGrid @ref="@_conGridPaymentRef"
                 R_IsHeader="true"
                 R_ViewModel="@PaymentTermViewModel"
                 R_ServiceGetRecord="@R_ServiceGetRecordAsync"
                 R_ServiceDelete="@ServiceDelete"
                 R_AfterDelete="Conductor_AfterDelete"
                 R_ServiceSave="@ServiceSave"
                 R_Validation="@ServiceValidation"
                 />
