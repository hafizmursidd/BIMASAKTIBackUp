@inherits R_Page
@inject R_ILocalizer<Resources_GST00500_Class> _localizer
<R_StackLayout>
    <R_ItemLayout>

        <R_Grid @ref="@_gridDraftTransRef"
                DataSource="_viewModelGST00500Draft.DraftTransactionList"
                R_ConductorGridSource="@_conductorDraftTrans"
                R_GridType="R_eGridType.Original"
                R_ServiceGetListRecord="ServiceGetListDraftTransaction"
                Pageable
                PageSize="15"
                AllowDeleteRow="false"
                AllowAddNewRow="false"
                AllowEditRow="false"
                Height="450px">
            <R_GridColumns>
                <R_GridTextColumn Width="250px"
                                  FieldName="CTRANS_NAME"
                                  HeaderText=@_localizer["_TransName"]>
                </R_GridTextColumn>
                <R_GridTextColumn Width="250px"
                                  FieldName="CDEPT_CODE"
                                  HeaderText=@_localizer["_DeptCode"]>
                </R_GridTextColumn>
                <R_GridTextColumn Width="250px"
                                  FieldName="CREF_NO"
                                  HeaderText=@_localizer["_RefNo"]>
                </R_GridTextColumn>
                <R_GridTextColumn Width="250px"
                                  FieldName="CREF_DATE"
                                  HeaderText=@_localizer["_RefDate"]>
                </R_GridTextColumn>
                <R_GridTextColumn Width="150px"
                                  FieldName="CUPDATE_BY"
                                  HeaderText=@_localizer["_UpdBy"]>
                </R_GridTextColumn>
                <R_GridDateTimePickerColumn Width="150px"
                                            FieldName="DUPDATE_DATE"
                                            HeaderText=@_localizer["_UpdDate"]>
                </R_GridDateTimePickerColumn>
            </R_GridColumns>
        </R_Grid>
        </R_ItemLayout>


        <R_StackLayout Row="true" Class="d-flex justify-content-end">
        <R_ItemLayout>
            <R_Detail R_Before_Open_Detail="R_Before_ServiceOpenOthersProgram"
                      R_After_Open_Detail="R_After_ServiceOpenOthersProgram">
                @_localizer["_BtnView"]
            </R_Detail>
            @*<R_Button>View</R_Button>*@
        </R_ItemLayout>
        </R_StackLayout>
        </R_StackLayout>

        <R_ConductorGrid @ref="@_conductorDraftTrans"
                 R_IsHeader="true"
                 R_ViewModel="@_viewModelGST00500Draft"
                 R_Display="@Grid_DisplayDraft">
        </R_ConductorGrid>