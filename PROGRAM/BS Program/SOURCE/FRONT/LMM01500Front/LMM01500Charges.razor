@inherits R_Page

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label Class="ms-6">Invoice Group</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="1" Class="me-3">
        <R_TextBox @bind-Value="@_OtherChargesViewModel._TabParam.CPROPERTY_ID" Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_OtherChargesViewModel._TabParam.CINVGRP_CODE" Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="12">
        <R_Grid @ref="@_gridOherCharges_Ref"
                DataSource="@_OtherChargesViewModel.ChargesList"
                Pageable="true"
                R_ConductorGridSource="@_conductorOtherChargesRef"
                R_GridType="@R_eGridType.Original"
                R_ServiceGetListRecord="@GetChargesList"
                AllowAddNewRow="false"
                AllowEditRow="false"
                AllowDeleteRow="true"
                Height="350px">
            <R_GridColumns>
                <R_GridLookupColumn FieldName="CCHARGES_ID" HeaderText="Charge Id" R_EnableAdd Width="200px"></R_GridLookupColumn>
                <R_GridTextColumn FieldName="CCHARGES_NAME" HeaderText="Charge Name" R_EnableAdd="false" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="UNIT_UTILITY_CHARGE" HeaderText="Unit/Utility Charge" R_EnableAdd="false" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCHARGES_TYPE_DESCR" HeaderText="Charge Type" R_EnableAdd="false" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCREATE_BY" HeaderText="Created By" R_EnableAdd="false" Width="150px"></R_GridTextColumn>
                <R_GridDateTimePickerColumn FieldName="DCREATE_DATE" HeaderText="Created Date" R_EnableAdd="false" Width="200px"></R_GridDateTimePickerColumn>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_ConductorGrid @ref="@_conductorOtherChargesRef"
                 R_ViewModel="@_OtherChargesViewModel"
                 R_IsHeader="true"
                 R_ServiceGetRecord="@ServiceGetRecordCharges">

</R_ConductorGrid>