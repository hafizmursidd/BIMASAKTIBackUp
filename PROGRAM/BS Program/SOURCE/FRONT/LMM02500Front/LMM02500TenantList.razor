@inherits R_Page;
@using LMM02500Common.DTO
@inject R_ILocalizer<Resources_LMM02500_Class> _localizer

<!-- Tenant List -->

    @* Tab ke - 4 *@
    <R_StackLayout>
        <R_StackLayout Row>

            <R_ItemLayout col="1">
                <R_Label>@_localizer["_TenantGroup"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="2">
                <R_TextBox @bind-Value="@_viewModelLMM02520.loTabParameter.CTENANT_GROUP_ID"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_TextBox @bind-Value="@_viewModelLMM02520.loTabParameter.CTENANT_GROUP_NAME"
                           Enabled="false">
                </R_TextBox>
            </R_ItemLayout>

        </R_StackLayout>
        <R_Grid
            @ref="@_gridRefLMM02520"
            DataSource="_viewModelLMM02520.loGridListLMM02520"
            Pageable
            Height="465px"
            R_ConductorGridSource="@_conductorLMM02520"
            R_GridType="@R_eGridType.Original"
            R_ServiceGetListRecord="@R_ServiceGetListRecordLMM02520"
            AllowDeleteRow="false"
            AllowAddNewRow="false"
            AllowEditRow="false">

            <R_GridColumns>
                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CTENANT_ID)" 
                    HeaderText="@_localizer["_TenantId"]"
                    Width="102px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CTENANT_NAME)" 
                    HeaderText="@_localizer["_TenantName"]"
                    Width="200px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CTENANT_GROUP_NAME)" 
                    HeaderText="@_localizer["_TenantCategory"]"
                    Width="180px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CTENANT_TYPE_NAME)" 
                    HeaderText="@_localizer["_TenantType"]"
                    Width="160px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CUNIT_NAME)"
                    HeaderText="@_localizer["_Units"]"
                    Width="110px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CPHONE1)" 
                    HeaderText="@_localizer["_PhoneTenant1"]"
                    Width="135px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CEMAIL)" 
                    HeaderText="@_localizer["_Email"]"
                    Width="190px"
                    R_EnableAdd="false" 
                    R_EnableEdit="false"/>

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CUPDATE_BY)" 
                    Width="140px"
                    HeaderText="@_localizer["_UpdatedBy"]"
                    />
                
                <R_GridDateTimePickerColumn 
                    FieldName="@nameof(LMM02520GridDTO.DUPDATE_DATE)"
                    Width="250px"
                    HeaderText="@_localizer["_UpdatedDate"]"
                    />

                <R_GridTextColumn 
                    FieldName="@nameof(LMM02520GridDTO.CCREATE_BY)" 
                    Width="110px"
                    HeaderText="@_localizer["_CreatedBy"]"
                    />

                <R_GridDateTimePickerColumn 
                    FieldName="@nameof(LMM02520GridDTO.DCREATE_DATE)" 
                    Width="250px"
                    HeaderText="@_localizer["_CreatedDate"]"
                    />

            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout>

        <R_ItemLayout col="2">
            <R_Popup R_ConductorGridSource="@_conductorTenantRef"
                     R_Before_Open_Popup="@R_Before_Open_Popup_Tenant_Move"
                     R_After_Open_Popup="@R_After_Open_Popup_Tenant_Move">
                     @_localizer["_Move"]
            </R_Popup>
        </R_ItemLayout>


    </R_StackLayout>

<R_ConductorGrid
    @ref="@_conductorLMM02520"
    R_IsHeader
    R_ViewModel="@_viewModelLMM02520"
    R_Display="@R_DisplayLMM02520"
    />

<R_ConductorGrid 
    @ref="@_conductorTenantRef"
    R_ViewModel="@_viewModelLMM02520"
    />