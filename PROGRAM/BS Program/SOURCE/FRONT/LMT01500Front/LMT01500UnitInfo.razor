@inherits R_Page;
@inject R_ILocalizer<Resources_LMT01500_Class> _localizer

@*TOP FORM*@
<R_StackLayout>
    @*ROW1*@
    <R_StackLayout Row>
        <R_ItemLayout col="4">
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_Label>Agreement No</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CREF_NO"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>

        <R_ItemLayout col="1">
        </R_ItemLayout>

        <R_ItemLayout col="6">
            <R_StackLayout Row>
                <R_ItemLayout col="3">
                    <R_Label>Tenant</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CTENANT_ID"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="7">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CTENANT_NAME"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>

    </R_StackLayout>
    @*2*@
    <R_StackLayout Row>
        <R_ItemLayout col="4">
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_Label>Charge Mode</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CCHARGES_MODE"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>

        <R_ItemLayout col="1">
        </R_ItemLayout>

        <R_ItemLayout col="6">
            <R_StackLayout Row>
                <R_ItemLayout col="3">
                    <R_Label>Building</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CBUILDING_ID"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="7">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CBUILDING_NAME"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
    </R_StackLayout>

    @*3*@
    <R_StackLayout Row>
        <R_ItemLayout col="4">
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_Label>Total Gross Area</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.NTOTAL_GROSS_AREA"
                                      Arrows="false"
                                      Enabled="false">
                    </R_NumericTextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_StackLayout Row>
                <R_ItemLayout col="3">
                    <R_Label>Unit Type Category</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CUNIT_TYPE_CATEGORY_ID"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="7">
                    <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.CUNIT_TYPE_CATEGORY_NAME"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
    </R_StackLayout>

    @*ROW4*@
    <R_StackLayout Row Class="mb-2">
        <R_ItemLayout col="4">
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_Label>Total Net Area</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="8">
                    <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.NTOTAL_NET_AREA"
                                      Arrows="false"
                                      Enabled="false">
                    </R_NumericTextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_StackLayout Row>
                <R_ItemLayout col="3">
                    <R_Label>Total Unit</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.loEntityUnitInfoHeader.ITOTAL_UNIT"
                                      Arrows="false"
                                      Enabled="false">
                    </R_NumericTextBox>
                </R_ItemLayout>
            </R_StackLayout>
        </R_ItemLayout>
    </R_StackLayout>

</R_StackLayout>

<R_TabStrip @ref="_tabStrip" OnActiveTabIndexChanging="@onTabChange">
    <R_TabStripTab Title="Unit Info" Id="Unit_Info">
        @*Grid*@
        <R_StackLayout>
            <R_Grid @ref="@_gridUnitInfo_UnitInfo"
                    DataSource="_viewModelLMT01500UnitInfo.loListLMT01500UnitInfo_UnitInfo"
                    R_ConductorSource="@_conductorUnitInfo_UnitInfo"
                    R_GridType="R_eGridType.Navigator"
                    R_ServiceGetListRecord="GetListUnitInfo"
                    Pageable
                    Height="275px">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="CUNIT_NAME"
                                      HeaderText="Unit Id" Width="125px" />
                    <R_GridTextColumn FieldName="CFLOOR_NAME"
                                      HeaderText="Floor" Width="125px" />
                    <R_GridTextColumn FieldName="CUNIT_TYPE_NAME"
                                      HeaderText="Unit Type" Width="125px" />
                    <R_GridNumericColumn FieldName="NGROSS_SIZE_AREA"
                                         HeaderText="Gross" Width="125px" />
                    <R_GridNumericColumn FieldName="Net"
                                         HeaderText="Gross" Width="125px" />
                    <R_GridNumericColumn FieldName="Common"
                                         HeaderText="Gross" Width="125px" />
                    <R_GridNumericColumn FieldName="Actual"
                                         HeaderText="Actual" Width="125px" />
                    <R_GridTextColumn FieldName="CUPDATE_BY"
                                      HeaderText="Updated By" Width="125px" />
                    <R_GridDateTimePickerColumn FieldName="DUPDATE_DATE"
                                                HeaderText="Updated Date" Width="225px" />
                    <R_GridTextColumn FieldName="CCREATE_BY"
                                      HeaderText="Created Date" Width="125px" />
                    <R_GridDateTimePickerColumn FieldName="DCREATE_DATE"
                                                HeaderText="Created Date" Width="225px" />
                </R_GridColumns>
            </R_Grid>

            </R_StackLayout>

            @*FORM DETAIL *@
            <R_StackLayout>

            @*ROW1*@
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_StackLayout Row>
                        <R_ItemLayout col="4">
                            <R_Label>Unit Id*</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout col="4">
                            <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.CUNIT_ID"
                                       R_ConductorSource="@_conductorUnitInfo_UnitInfo"
                                       Enabled="false">
                            </R_TextBox>
                        </R_ItemLayout>
                        <R_ItemLayout>
                            <R_Lookup @ref="@R_Lookup_Unit_Id"
                                      R_Before_Open_Lookup="@BeforeOpenLookUp_UnitID"
                                      R_After_Open_Lookup="@AfterOpenLookUp_UnitID"
                                      R_ConductorSource="@_conductorUnitInfo_UnitInfo"
                                      R_EnableAdd="true"
                                      R_EnableEdit="true">
                                ...
                            </R_Lookup>
                        </R_ItemLayout>
                        <R_ItemLayout col="7">
                            <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.CUNIT_NAME"
                                       R_ConductorSource="@_conductorUnitInfo_UnitInfo"
                                       Enabled="false">
                            </R_TextBox>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>
            </R_StackLayout>

            @*Row2*@
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_StackLayout Row>
                        <R_ItemLayout col="4">
                            <R_Label>Unit Type</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout col="4">
                            <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.CUNIT_TYPE_ID"
                                       Enabled="false">
                            </R_TextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="8">
                            <R_TextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.CUNIT_TYPE_NAME"
                                       Enabled="false">
                            </R_TextBox>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>
            </R_StackLayout>

            @*Row3*@
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_StackLayout Row>
                        <R_ItemLayout col="4">
                            <R_Label>Gross Area</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout col="4">
                            <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.NGROSS_SIZE_AREA"
                                              Arrows="false"
                                              Enabled="false">
                            </R_NumericTextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="1">
                            <R_Label>sqm</R_Label>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>

                <R_ItemLayout col="8">
                    <R_StackLayout Row>
                        <R_ItemLayout col="2">
                            <R_Label>Net Area</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout col="3">
                            <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.NNET_SIZE_AREA"
                                              Arrows="false"
                                              Enabled="false">
                            </R_NumericTextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="1">
                            <R_Label>sqm</R_Label>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>
            </R_StackLayout>

            @*Row4*@
            <R_StackLayout Row>
                <R_ItemLayout col="4">
                    <R_StackLayout Row>
                        <R_ItemLayout col="4">
                            <R_Label>Common Area</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout col="4">
                            <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.NCOMMON_SIZE_AREA"
                                              @ref="@FocusLabelEdit"
                                              Arrows="false"
                                              Enabled="false"
                                              >
                            </R_NumericTextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="1">
                            <R_Label>sqm</R_Label>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>

                <R_ItemLayout col="8">
                    <R_StackLayout Row>
                        <R_ItemLayout col="2">
                            <R_Label>Actual Area</R_Label>
                        </R_ItemLayout>
                        <R_ItemLayout col="3">
                            <R_NumericTextBox @bind-Value="@_viewModelLMT01500UnitInfo.Data.NACTUAL_SIZE_AREA"
                                              Arrows="false"
                                              Enabled="false">
                            </R_NumericTextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="1">
                            <R_Label>sqm</R_Label>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>
            </R_StackLayout>

        </R_StackLayout>
        <R_StackLayout>
            <R_StackLayout Row="true" Spacing="3" Class="d-flex justify-content-between">
                <R_StackLayout Row="true">
                    <R_ItemLayout>
                        <R_AddButton R_Conductor="@_conductorUnitInfo_UnitInfo"></R_AddButton>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_EditButton R_Conductor="@_conductorUnitInfo_UnitInfo"></R_EditButton>
                    </R_ItemLayout>

                    <R_ItemLayout>
                        <R_DeleteButton R_Conductor="@_conductorUnitInfo_UnitInfo"></R_DeleteButton>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row="true">
                    <R_ItemLayout>
                        <R_CancelButton R_Conductor="@_conductorUnitInfo_UnitInfo"></R_CancelButton>
                    </R_ItemLayout>
                    <R_ItemLayout>
                        <R_SaveButton R_Conductor="@_conductorUnitInfo_UnitInfo"></R_SaveButton>
                    </R_ItemLayout>
                </R_StackLayout>

            </R_StackLayout>
        </R_StackLayout>
    </R_TabStripTab>

<R_TabStripTab Title="Utilities" Id="Utilities">
        <R_TabPage @ref="@_tabPageUtilities"
                   R_Before_Open_TabPage="Before_Open_TabUtilities">
    </R_TabPage>
</R_TabStripTab>
</R_TabStrip>


<R_Conductor @ref="@_conductorUnitInfo_UnitInfo"
             R_ViewModel="@_viewModelLMT01500UnitInfo"
             R_IsHeader="true"
             R_ServiceGetRecord="@ServiceGetOneRecord_UnitInfo"
             R_ServiceDelete="@ServiceDelete"
             R_AfterDelete="ServiceAfterDelete"
             R_Display="@ServiceR_Display"
             R_ServiceSave="@ServiceSave"
             R_Validation="R_Validation" />
