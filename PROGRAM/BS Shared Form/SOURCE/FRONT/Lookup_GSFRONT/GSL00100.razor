@inherits R_Page
@attribute [R_Page(Title = "Sales Tax")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
     <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.SalesTaxGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                R_GridType="@R_eGridType.Navigator"
                Pageable="true"
                Height="300px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CTAX_ID" HeaderText="@_localizer["_TaxId"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAX_NAME" HeaderText="@_localizer["_TaxName"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CROUNDING_MODE_DESCR" HeaderText="@_localizer["_RoundMode"]" Width="200px"></R_GridTextColumn>
                <R_GridNumericColumn FieldName="IROUNDING" ThousandSeparator="false" HeaderText="@_localizer["_RoundUnit"]" Width="200px"></R_GridNumericColumn>
                <R_GridTextColumn FieldName="CTAXIN_GLACCOUNT_NO_CTAXIN_GLACCOUNT_NAME" HeaderText="@_localizer["_TaxGlAccountNo"]" Width="400px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAXOUT_GLACCOUNT_NO_CTAXOUT_GLACCOUNT_NAME" HeaderText="@_localizer["_TaxGlAccountName"]" Width="400px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

<R_StackLayout Row Class="justify-content-end">
        <R_Button OnClick="Button_OnClickOkAsync">
            @_localizer["_OkBtn"]
        </R_Button>
        <R_Button OnClick="Button_OnClickCloseAsync">
            @_localizer["_CancelBtn"]
        </R_Button>
</R_StackLayout>

</R_StackLayout>