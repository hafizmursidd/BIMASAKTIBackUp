@inherits R_Page
@attribute [R_Page(Title = "Withholding Tax")]

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.WithholdingTaxGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5" 
                Height="300px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CTAX_TYPE_DESCR" HeaderText="Tax Type" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAX_ID" HeaderText="Tax Id" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAX_NAME" HeaderText="Tax Name" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDESCRIPTION" HeaderText="Description" Width="300px"></R_GridTextColumn>
                <R_GridNumericColumn FieldName="NTAX_PERCENTAGE" Arrows="false" HeaderText="Tax%" Width="100px"></R_GridNumericColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">

            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
    </R_StackLayout>

</R_StackLayout>