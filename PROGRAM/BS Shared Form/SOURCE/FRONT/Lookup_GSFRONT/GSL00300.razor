@inherits R_Page
@attribute [R_Page(Title = "Currency")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                R_GridType="@R_eGridType.Navigator"
                DataSource="_viewModel.CurrencyGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable="true">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CCURRENCY_NAME_CODE" HeaderText="@_localizer["_Currency"]"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCURRENCY_SYMBOL" HeaderText="@_localizer["_Symbol"]"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">

            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
    </R_StackLayout>

</R_StackLayout>