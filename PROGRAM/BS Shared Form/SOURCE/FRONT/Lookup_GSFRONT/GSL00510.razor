@inherits R_Page
@attribute [R_Page(Title = "COA")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.COAGrid"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Height="300px"
                Pageable="true">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CGLACCOUNT_NO" HeaderText="@_localizer["_AccountNo"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CGLACCOUNT_NAME" HeaderText="@_localizer["_AccountName"]" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CBSIS_DESCR" HeaderText="@_localizer["_BSISDesc"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDBCR_DESCR" HeaderText="@_localizer["_DCDesc"]" Width="100px"></R_GridTextColumn>
                <R_GridCheckBoxColumn FieldName="LACTIVE" HeaderText="@_localizer["_Active"]" Width="100px"></R_GridCheckBoxColumn>
                <R_GridCheckBoxColumn FieldName="LUSER_RESTR" HeaderText="@_localizer["_UserRestr"]" Width="200px"></R_GridCheckBoxColumn>
                <R_GridCheckBoxColumn FieldName="LCENTER_RESTR" HeaderText="@_localizer["_CenterRestr"]" Width="200px"></R_GridCheckBoxColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-between"> 
        <R_ItemLayout>
            <R_CheckBox Value="@_viewModel.Inactive_Coa"
                        ValueChanged="@((bool value) => OnChangeInactiveCOA(value))"
                        >
            </R_CheckBox>
            <R_Label>@_localizer["_EnableCOA"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
