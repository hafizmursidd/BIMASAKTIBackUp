@inherits R_Page
@attribute [R_Page(Title = "GL Account")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.GOAGrid"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Height="300px"
                Pageable="true">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CGOA_CODE" HeaderText="@_localizer["_GOACode"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CGOA_NAME" HeaderText="@_localizer["_GOAName"]" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CBSIS_DESCR" HeaderText="@_localizer["_BSISDesc"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDBCR_DESCR" HeaderText="@_localizer["_DCDesc"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CUPDATE_BY" HeaderText="@_localizer["_UpdateBy"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="DUPDATE_DATE" HeaderText="@_localizer["_UpdateDate"]" Width="100px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
    </R_StackLayout>

</R_StackLayout>