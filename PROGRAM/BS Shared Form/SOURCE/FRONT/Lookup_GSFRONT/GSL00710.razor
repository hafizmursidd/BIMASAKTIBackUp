@inherits R_Page
@attribute [R_Page(Title = "Department Property Lookup")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.DepartmentPropertyGrid"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable="true"
                Height="300px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CDEPT_CODE" HeaderText="@_localizer["_DeptCode"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDEPT_NAME" HeaderText="@_localizer["_DeptName"]" Width="300px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
    </R_StackLayout>

</R_StackLayout>