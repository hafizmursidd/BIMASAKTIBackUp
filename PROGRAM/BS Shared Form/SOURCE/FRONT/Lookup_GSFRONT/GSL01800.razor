@inherits R_Page
@attribute [R_Page(Title = "Category")]
@using Lookup_GSCOMMON.DTOs

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_TreeView @ref="@_treeRef"
                    DataSource="@_viewModel.CategoryGrid"
                    TextField="@nameof(GSL01800DTO.ILEVEL_CCATEGORY_ID_CCATEGORY_NAME_DISPLAY)"
                    IdField="@nameof(GSL01800DTO.CCATEGORY_ID)"
                    ParentIdField="@nameof(GSL01800DTO.CPARENT)"
                    HasChildrenField="@nameof(GSL01800DTO.LHAS_CHILD)"
                    R_ServiceGetListRecord="@R_ServiceGetListRecordAsync"
                    R_RefreshTreeViewState="@Tree_R_RefreshTreeViewState">
        </R_TreeView>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
    </R_StackLayout>

</R_StackLayout>