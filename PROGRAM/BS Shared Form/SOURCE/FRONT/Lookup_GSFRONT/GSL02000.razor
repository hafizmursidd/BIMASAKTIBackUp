@inherits R_Page
@attribute [R_Page(Title = "Geography")]
@using Lookup_GSCOMMON.DTOs

<R_StackLayout Style="width: 800px">
    <R_StackLayout>
        <R_TreeView @ref="@_treeRef"
                    DataSource="@_viewModel.GeographyGrid"
                    TextField="@nameof(GSL02000DTO.CCODE_CNAME_DISPLAY)"
                    IdField="@nameof(GSL02000DTO.CCODE)"
                    ParentIdField="@nameof(GSL02000DTO.CPARENT_CODE)"
                    HasChildrenField="@nameof(GSL02000DTO.LHAS_CHILD)"
                    R_ServiceGetListRecord="@R_ServiceGetListRecordAsync"
                    R_RefreshTreeViewState="@Tree_R_RefreshTreeViewState">
        </R_TreeView>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
    </R_StackLayout>

</R_StackLayout>

    <R_Conductor @ref="@_conductorRef"
             R_ViewModel="@_viewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@Conductor_ServiceGetRecord"
             ></R_Conductor>