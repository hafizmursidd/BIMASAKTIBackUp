@inherits R_Page
@attribute [R_Page(Title = "Payment Term")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.PaymentTermGrid"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable="true">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CPAY_TERM_CODE" HeaderText="@_localizer["_TOPCode"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CPAY_TERM_NAME" HeaderText="@_localizer["_TOPName"]" Width="300px"></R_GridTextColumn>
                <R_GridNumericColumn FieldName="IPAY_TERM_DAYS" HeaderText="@_localizer["_TOPDays"]" Width="100px"></R_GridNumericColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
    </R_StackLayout>

</R_StackLayout>