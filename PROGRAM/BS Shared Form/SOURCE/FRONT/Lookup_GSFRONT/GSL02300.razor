@inherits R_Page
@attribute [R_Page(Title = "Building Unit Lookup")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_Floor"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @ref="@_FloorCode" @bind-Value="@_Parameter.CFLOOR_ID" Enabled="true"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="0">
            <R_Lookup R_Before_Open_Lookup="@R_Before_Open_LookupFloor"
                      R_After_Open_Lookup="@R_After_Open_LookupFloor" Enabled="true">...</R_Lookup>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@_FloorName"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.BuildingUnitGrid"
                R_GridType="@R_eGridType.Navigator"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable="true">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CUNIT_ID" HeaderText="@_localizer["_UnitId"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CUNIT_NAME" HeaderText="@_localizer["_BuildingName"]" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CUNIT_TYPE_NAME" HeaderText="@_localizer["_UnitType"]" Width="200px"></R_GridTextColumn>
                <R_GridNumericColumn Arrows="false" FieldName="NGROSS_AREA_SIZE" HeaderText="@_localizer["_Gross"]" Width="200px"></R_GridNumericColumn>
                <R_GridNumericColumn Arrows="false" FieldName="NNET_AREA_SIZE" HeaderText="@_localizer["_Net"]" Width="200px"></R_GridNumericColumn>
                <R_GridTextColumn FieldName="CUNIT_VIEW_NAME" HeaderText="@_localizer["_UnitView"]" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CUNIT_CATEGORY_NAME" HeaderText="@_localizer["_UnitCategory"]" Width="200px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
    </R_StackLayout>

</R_StackLayout>