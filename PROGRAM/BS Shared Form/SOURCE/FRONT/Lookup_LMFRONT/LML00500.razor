@inherits R_Page
@attribute [R_Page(Title = "Salesman")]
@inject R_ILocalizer<Resources_LookupLM_Class> _localizer

<R_StackLayout Row>
    <R_Grid @ref="@GridRef"
            DataSource="_viewModelLML00500.SalesmanList"
            R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
            Pageable
            PageSize="5"
            Height="300px"
            Width="600px"
    >
        <R_GridColumns>
            <R_GridTextColumn Width="150px" 
                              FieldName="@nameof(LML00500DTO.CSALESMAN_ID)" 
                              HeaderText=@_localizer["_SalesmanId"]></R_GridTextColumn>
            <R_GridTextColumn Width="250px" 
                              FieldName="@nameof(LML00500DTO.CSALESMAN_NAME)" 
                              HeaderText=@_localizer["_SalesmanName"]></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_StackLayout Row Class="justify-content-end">
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickOkAsync">
            OK
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout xs="2">
        <R_Button OnClick="Button_OnClickCloseAsync">
            Cancel
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>